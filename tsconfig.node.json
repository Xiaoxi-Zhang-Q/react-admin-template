{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["./*"],
      "/@/*": ["./src/*"],
      "/@x/*": ["./library/*"]
    }
  },
  "include": ["vite.config.ts","library"]
}
